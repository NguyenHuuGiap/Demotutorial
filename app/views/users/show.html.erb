<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-15">
    <section class="user_info">
      <h1>
      <div class="anh">
        <%= gravatar_for @user %>
       </div>
       <div class="ten">
       	<%= @user.name %>
       </div> 
      </h1>
      <% if current_user == @user %>
       <%= render 'shared/post_form'%>
       <% end %>

    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

  </aside>
    <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
</div>

</div>
<div class="col-md-4">
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
</div>